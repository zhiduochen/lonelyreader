<div class="col-md-12 index-board-top">
  <div class="container">
    <div class="col-md-10 col-md-offset-1">
      <h2>星空堂</h2>
      <% if current_user && current_user.admin? %>
        <div class="group">
          <%= link_to("新版块", new_board_path, class: "btn btn-primary pull-right") %>
        </div>
      <% end %>
      <table class="table table-hover">
        <thead>
          <tr>
            <td>板块</td>
            <td>描述</td>
            <td>创建者 </td>
            <% if current_user && current_user.admin? %>
              <td>操作选项</td>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <%= render :partial => "board", :collection => @boards, :as => :board %>
        </tbody>
      </table>

    </div>
  </div>

</div>
