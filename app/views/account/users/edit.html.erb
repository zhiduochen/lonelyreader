<div class="col-md-12 edit-user-top">
  <div class="container">
    <div class="col-md-4 col-md-offset-4">
      <h2 class="text-center">收货信息</h2>
      <br />
      <%= simple_form_for [:account, @user] do |f| %>
        <div class="group">
          <%= f.input :name ,:label => "姓名" %>
        </div>
        <div class="group">
          <%= f.input :address, :label => "地址"%>
        </div>
        <div class="group">
          <%= f.submit "提交", class: "btn btn-primary" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
