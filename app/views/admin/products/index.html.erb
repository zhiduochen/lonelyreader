<div class="row name text-center", style="margin-top: 150px;">
<h2> 课程列表 </h2>
    <div class="pull-right" style="padding-bottom: 20px;">
      <%= link_to("新增产品", new_admin_product_path, class: "btn btn-primary btn-sm") %>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th width="220">Product Pic</th>
          <th>Name</th>
          <th>Price</th>
          <th width="100"> Options</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each_with_index do |product, index| %>
          <tr>
            <td>
              <%= index + 1 %>
            </td>
            <td>
              <%= link_to product_path(product) do %>
                <% if product.image.present? %>
                  <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= product.title %>
            </td>
            <td>
              <%= product.price %>
            </td>
            <td>
              <%= link_to("Edit", edit_admin_product_path(product), :class => "btn btn-sm btn-default") %>
              <%= link_to("Delete", admin_product_path(product), :method => :delete, :data => {:confirm => "Are you sure?"}, :class => "btn btn-sm btn-danger") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
