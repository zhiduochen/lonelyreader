<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@board, @post] do |f| %>
    <div class="form-group">
      <%= f.input :title %>
      <%= f.input :content %>
    </div>
    <div class="form-actions">
      <%= f.submit "提交", disable_with: "提交中...", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
