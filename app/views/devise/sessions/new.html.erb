<div class="col-md-12">
  <div class="row facepanel">
    <div class="col-md-4 col-md-offset-4 login-page">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h2 class="name text-center">登 <img src="https://ws1.sinaimg.cn/large/006tNbRwly1fg65o5xwtoj30dc0dct9v.jpg" height="30" width="30"> 录</h2>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
